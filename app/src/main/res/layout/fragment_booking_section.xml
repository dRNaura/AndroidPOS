<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/lay_booking_section"
    android:background="@color/bgColor"
    android:clickable="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:weightSum="2">


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:id="@+id/lay_list_booking"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/barColor"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15sp">

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@mipmap/new_draft" />

                    <com.pos.salon.customview.CustomTextViewOpenSans
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="BOOKING LIST"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/layout_text_size"
                        app:fontFamily="@string/opensansregular" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:id="@+id/lay_calenderview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/barColor"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15sp">

                    <ImageView
                        android:id="@+id/img_dash_img"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@mipmap/category_new" />

                    <com.pos.salon.customview.CustomTextViewOpenSans
                        android:id="@+id/dash_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="CALENDER VIEW"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/layout_text_size"
                        app:fontFamily="@string/opensansregular" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>


</FrameLayout>