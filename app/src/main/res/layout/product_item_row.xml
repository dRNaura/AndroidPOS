<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:id="@+id/ll_searchproduct"
    android:layout_marginTop="15dp"
    android:layout_marginRight="5dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_productlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="30dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardvieww"
                    app:cardBackgroundColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="15dp">

                        <ImageView
                            android:id="@+id/imgItem"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/mobile"
                            android:visibility="gone" />

                        <com.pos.salon.customview.CustomTextViewOpenSans
                            android:id="@+id/txtProductName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="left"
                            android:text="10 SAM Tab A Tablet"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            app:fontFamily="@string/opensansregular" />

                        <com.pos.salon.customview.CustomTextViewOpenSans
                            android:id="@+id/txtProductId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:gravity="left"
                            android:text="10 SAM Tab A Tablet"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            app:fontFamily="@string/opensansregular" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="left"
                            android:orientation="horizontal"
                            android:weightSum="1">


                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Price: "
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                app:fontFamily="@string/opensansregular" />

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txtProductPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/btnColor"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                app:fontFamily="@string/opensansregular" />


                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txtVariety"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                app:fontFamily="@string/opensansregular" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Qty: "
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                app:fontFamily="@string/opensansregular" />

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txtquantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/payBtn"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                app:fontFamily="@string/opensansregular" />

                        </LinearLayout>

                    </LinearLayout>



                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"

                android:gravity="center">

                <ImageView
                    android:id="@+id/imgAddProduct"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/inactiveadd_product" />

            </LinearLayout>









    </FrameLayout>




</LinearLayout>
