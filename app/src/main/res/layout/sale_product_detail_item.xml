<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
       android:background="@drawable/lispos_stroke"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:id="@+id/txt_ProductName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="left"
            android:text=""
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            app:fontFamily="@string/opensansregular"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="left"
            android:text="Unit Price: "
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            app:fontFamily="@string/opensansregular" />

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:id="@+id/txt_unit_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="12dp"
            app:fontFamily="@string/opensansregular" />

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:text="|"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:fontFamily="@string/opensansregular" />

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="left"
            android:text="Discount:"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            app:fontFamily="@string/opensansregular" />

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:id="@+id/txt_productDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text=""
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:fontFamily="@string/opensansregular" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:text="Tax:"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            app:fontFamily="@string/opensansregular" />

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:id="@+id/txt_Tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:text=""
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:fontFamily="@string/opensansregular" />

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:layout_gravity="center_vertical"
            android:text="|"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:fontFamily="@string/opensansregular" />

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:text="Price inc tax:"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            app:fontFamily="@string/opensansregular" />

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:id="@+id/txt_Price_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:gravity="left"
            android:text=""
            android:textColor="@color/black"
            android:textSize="12dp"
            app:fontFamily="@string/opensansregular" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/colorBlue"
        android:layout_height="wrap_content">

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:text="Subtotal"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold"
            app:fontFamily="@string/opensansregular" />

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:id="@+id/txt_subTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/payment_background"
            android:padding="2dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12dp"
            app:fontFamily="@string/opensansregular" />
    </RelativeLayout>

<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:background="@color/black"-->
<!--        android:layout_marginTop="5dp"-->
<!--        android:layout_height="1dp"/>-->

</LinearLayout>
</LinearLayout>