<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:id="@+id/lay_repair_forward"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:weightSum="80"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="left"
                                android:text="Repair ID:"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                app:fontFamily="@string/opensansregular" />

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txt_repair_id"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:gravity="left"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                app:fontFamily="@string/opensansregular" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_gravity="right"
                                android:layout_marginRight="10dp"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:id="@+id/lay_pay"
                                    android:layout_width="match_parent"
                                    android:gravity="right"
                                    android:layout_height="wrap_content">


                                    <com.pos.salon.customview.CustomTextViewOpenSans
                                        android:layout_width="wrap_content"
                                        android:id="@+id/txt_repair_status"
                                        android:layout_height="wrap_content"
                                        android:text="Fixed"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:paddingTop="5dp"
                                        android:visibility="visible"
                                        android:paddingBottom="5dp"
                                        android:background="@color/payBtn"
                                        android:textSize="10dp"
                                        android:textColor="@color/white"
                                        app:fontFamily="@string/opensansregular" />


                                </RelativeLayout>


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="left"
                                android:text="Serial No.:"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                app:fontFamily="@string/opensansregular" />


                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txt_repair_serial_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                app:fontFamily="@string/opensansregular" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:gravity="right"
                                android:layout_height="wrap_content">


                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:layout_width="wrap_content"
                                    android:id="@+id/txt_created_date"
                                    android:layout_height="wrap_content"
                                    android:text="10/12/2012 11:11:12"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:visibility="visible"
                                    android:textSize="12dp"
                                    android:textColor="@color/black"
                                    app:fontFamily="@string/opensansregular" />


                            </RelativeLayout>




                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="left"
                                android:text="Customer:"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                app:fontFamily="@string/opensansregular" />


                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txt_customer_repair"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                app:fontFamily="@string/opensansregular" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:text="Contact:"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                app:fontFamily="@string/opensansregular" />

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txt_repair_contact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                app:fontFamily="@string/opensansregular" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Brand:"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                app:fontFamily="@string/opensansregular" />

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txt_repair_brand"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                app:fontFamily="@string/opensansregular" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Model:"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                app:fontFamily="@string/opensansregular" />

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txt_repair_model"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                app:fontFamily="@string/opensansregular" />


                        </LinearLayout>
                    </LinearLayout>





                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout

            android:id="@+id/lay_forward"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_forward"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:src="@drawable/rightarrow" />

        </LinearLayout>


    </FrameLayout>


</LinearLayout>
