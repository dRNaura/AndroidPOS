<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lay_return_sale"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bgColor"
    tools:context=".fragment.ReturnFragments.ReturnSaleFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingBottom="15dp"
                        android:weightSum="50"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txt_DetailInvoice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="left"
                                android:text="Parent Sale"
                                android:textColor="@color/black"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                app:fontFamily="@string/opensansregular" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:background="#D8D8D8"
                            android:layout_marginTop="5dp"
                            android:layout_height="0.5dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:gravity="left"
                                android:text="Invoice No.:"
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                app:fontFamily="@string/opensansregular" />

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txt_return_invoice_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:gravity="left"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                app:fontFamily="@string/opensansregular" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:gravity="left"
                                android:text="Customer:"
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                app:fontFamily="@string/opensansregular" />

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txt_returnCustomer_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="10dp"
                                android:gravity="left"
                                android:text=""
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                app:fontFamily="@string/opensansregular" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:text="Date:"
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                app:fontFamily="@string/opensansregular" />

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txt_return_Date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="2dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                app:fontFamily="@string/opensansregular" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:text="Business Location:"
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                app:fontFamily="@string/opensansregular" />

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txt_returnLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_gravity="center_vertical"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="11dp"
                                app:fontFamily="@string/opensansregular" />
                        </LinearLayout>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:background="@drawable/square_layout_stroke_bg"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_invoice_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Invoice No."
                                android:inputType="number"
                                android:padding="5dp"
                                android:background="@android:color/transparent"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:padding="5dp"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/name" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="367dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/square_layout_stroke_bg"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/et_return_Date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:hint="Date"
                                android:inputType="textCapSentences"
                                android:padding="5dp"
                                android:textColor="@color/black"
                                android:textSize="15sp" />>

                            <ImageView
                                android:id="@+id/img_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="8dp"
                                android:padding="5dp"
                                android:src="@drawable/calendar" />

                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_height="wrap_content">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_alignParentLeft="true"
                                android:text="Return Total : "
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                app:fontFamily="@string/opensansregular" />

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txt__return_subtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="10dp"
                                android:text="0.00"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                app:fontFamily="@string/opensansregular" />
                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/colorGray" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:padding="5dp"
                            android:background="@drawable/square_layout_stroke_bg"
                            android:layout_height="wrap_content">

                            <Spinner
                                android:id="@+id/spnr_discount_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Discount Type"
                                android:inputType="textCapSentences"
                                android:padding="5dp"
                                android:background="@android:color/transparent"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:padding="5dp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/arrowdown" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:background="@drawable/square_layout_stroke_bg"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_discount_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Discount Amount"
                                android:inputType="number"
                                android:padding="5dp"
                                android:background="@android:color/transparent"
                                android:textColor="@color/black"
                                android:textSize="15sp" />


                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/square_layout_stroke_bg"
                            android:layout_height="wrap_content">





                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_alignParentLeft="true"
                                    android:text="Total Return Discount:"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    app:fontFamily="@string/opensansregular" />

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:id="@+id/txt_total_return_discount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="10dp"
                                    android:text="(-)0.00"
                                    android:textAllCaps="true"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    app:fontFamily="@string/opensansregular" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_height="wrap_content">

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:id="@+id/label_returnTax"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginLeft="8dp"
                                    android:text="Total Return Tax:"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    app:fontFamily="@string/opensansregular" />

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:id="@+id/txt_total_return_tax"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="10dp"
                                    android:text="+0.00"
                                    android:textAllCaps="true"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    app:fontFamily="@string/opensansregular" />
                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp"
                                android:background="@color/payBtn"
                                android:layout_height="wrap_content">

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="8dp"
                                    android:layout_centerVertical="true"
                                    android:text="Final Return Total"
                                    android:textColor="@color/white"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    app:fontFamily="@string/opensansregular" />

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:id="@+id/txt_return_Total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="10dp"
                                    android:padding="2dp"
                                    android:text=""
                                    android:textColor="@color/white"
                                    android:textSize="12dp"
                                    app:fontFamily="@string/opensansregular" />
                            </RelativeLayout>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_update_sale_return"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/btnColor"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Update"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>