<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_booking_detail_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bgColor"
    android:clickable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:weightSum="50">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txt_customerName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="left"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                app:fontFamily="@string/opensansregular"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="5dp"
                            android:background="#D8D8D8" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:gravity="left"
                                android:text="Email : "
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                app:fontFamily="@string/opensansregular" />

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txt_CustomerEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                app:fontFamily="@string/opensansregular" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:text="Mobile : "
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                app:fontFamily="@string/opensansregular" />

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txt_mobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                app:fontFamily="@string/opensansregular" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:weightSum="2"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Booking Date : "
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    app:fontFamily="@string/opensansregular" />

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:id="@+id/txt_booking_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    app:fontFamily="@string/opensansregular" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Booking Date : "
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    app:fontFamily="@string/opensansregular" />

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:id="@+id/txt_booking_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    app:fontFamily="@string/opensansregular" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:text="Booking Status : "
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                app:fontFamily="@string/opensansregular" />

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txt_booking_Status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textAllCaps="true"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                app:fontFamily="@string/opensansregular" />
                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:id="@+id/card_shipping_address"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content">

                        <com.pos.salon.customview.CustomTextViewOpenSans
                            android:layout_width="wrap_content"
                            android:id="@+id/shipping_addre"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="left"
                            android:text="Shipping Address : "
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            app:fontFamily="@string/opensansregular" />

                        <com.pos.salon.customview.CustomTextViewOpenSans
                            android:id="@+id/txt_ShippingAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="2dp"
                            android:layout_toRightOf="@+id/shipping_addre"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            app:fontFamily="@string/opensansregular" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content">

                        <com.pos.salon.customview.CustomTextViewOpenSans
                            android:layout_width="wrap_content"
                            android:id="@+id/shipping_status"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="left"
                            android:text="Delivery Status : "
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            app:fontFamily="@string/opensansregular" />

                        <com.pos.salon.customview.CustomTextViewOpenSans
                            android:id="@+id/txt_DeliveryStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="2dp"
                            android:layout_toRightOf="@+id/shipping_status"
                            android:text=""
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            app:fontFamily="@string/opensansregular" />

                    </RelativeLayout>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="left"
                                android:text="Service Staff"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                app:fontFamily="@string/opensansregular" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:background="#D8D8D8"
                            android:layout_marginTop="5dp"
                            android:layout_height="0.5dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_height="wrap_content">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyc_Employee"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="left"
                                android:text="Details"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                app:fontFamily="@string/opensansregular" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:background="#D8D8D8"
                            android:layout_marginTop="5dp"
                            android:layout_height="0.5dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:weightSum="9"
                            android:padding="5dp"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="#"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"/>
                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:text="Item"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"/>

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:text="Unit Price"
                                android:textSize="14dp"
                                android:gravity="center_horizontal"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"/>

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:text="Quantity"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                android:gravity="center_horizontal"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"/>
                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:text="Amount"
                                android:textStyle="bold"
                                android:gravity="center_horizontal"
                                android:textSize="14dp"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_height="wrap_content">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyc_ProductServiceDetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="left"
                                android:text="Payment Info"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                app:fontFamily="@string/opensansregular" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:background="#D8D8D8"
                            android:layout_marginTop="5dp"
                            android:layout_height="0.5dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/square_layout_stroke_bg"
                            android:layout_height="wrap_content">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_alignParentLeft="true"
                                    android:text="Service Sub Total :"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    app:fontFamily="@string/opensansregular" />

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:id="@+id/txt_service_subtotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="10dp"
                                    android:text=""
                                    android:textAllCaps="true"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    app:fontFamily="@string/opensansregular" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_height="wrap_content">

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginLeft="8dp"
                                    android:text="Total Tax:"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    app:fontFamily="@string/opensansregular" />

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:id="@+id/txt_tax"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="10dp"
                                    android:text=""
                                    android:textAllCaps="true"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    app:fontFamily="@string/opensansregular" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_height="wrap_content">

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_alignParentLeft="true"
                                    android:text="Service Total:"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    app:fontFamily="@string/opensansregular" />

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:id="@+id/txt_serviceTotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="10dp"
                                    android:text=""
                                    android:textAllCaps="true"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    app:fontFamily="@string/opensansregular" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_height="wrap_content">

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_alignParentLeft="true"
                                    android:text="Product Total:"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    app:fontFamily="@string/opensansregular" />

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:id="@+id/txt_productTotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="10dp"
                                    android:text=""
                                    android:textAllCaps="true"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    app:fontFamily="@string/opensansregular" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"
                                android:background="@color/payBtn"
                                android:layout_height="wrap_content">

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="8dp"
                                    android:layout_centerVertical="true"
                                    android:text="Grand Total"
                                    android:textColor="@color/white"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    app:fontFamily="@string/opensansregular" />

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:id="@+id/txt_finalTotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="10dp"
                                    android:padding="2dp"
                                    android:text=""
                                    android:textColor="@color/white"
                                    android:textSize="12dp"
                                    app:fontFamily="@string/opensansregular" />
                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="50"
                        android:padding="5dp"
                        android:layout_height="wrap_content">



                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="40"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp"
                                android:layout_height="wrap_content">

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="left"
                                    android:text="Payment Method : "
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    app:fontFamily="@string/opensansregular" />

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:id="@+id/txt_paymentMethod"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Cash"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    app:fontFamily="@string/opensansregular" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp"
