<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Select Method"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/lay_insert_card"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="8dp"
            android:background="@color/colorgray2"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/img_insert"
                android:layout_toLeftOf="@+id/txt_insert_card"
                android:layout_marginRight="10dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/txt_insert_card"
                android:layout_width="wrap_content"
                android:text="Insert Card"
                android:textSize="16sp"
                android:textColor="@color/black"
               android:layout_centerInParent="true"
                android:layout_height="wrap_content"/>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lay_swipe_card"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="8dp"
            android:background="@color/colorgray2"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/img_swipe"
                android:layout_toLeftOf="@+id/txt_swipe_card"
                android:layout_marginRight="10dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/txt_swipe_card"
                android:layout_width="wrap_content"
                android:text="Swipe Card"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

        <TextView
            android:id="@+id/txt_card_cancel"
            android:layout_width="match_parent"
            android:text="Cancel"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/colorBlue"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</LinearLayout>