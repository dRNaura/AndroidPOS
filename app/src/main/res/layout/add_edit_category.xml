<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_margin="15dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_editext"
    android:orientation="vertical">

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/background_editext"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Add Category"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20sp"
            android:text="Category Name:"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/et_bg">


            <EditText
                android:id="@+id/et_category_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:padding="8dp"
                android:hint="Enter Category Name"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />



        </RelativeLayout>

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20sp"
            android:text="Category Code:"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/et_bg">


            <EditText
                android:id="@+id/et_category_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:padding="8dp"
                android:hint="Enter Category Code"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />



        </RelativeLayout>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:id="@+id/radioGroup">

            <RadioButton
                android:id="@+id/rd_as_sub"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Add as sub-category"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:checked="false"/>

            <RelativeLayout
                android:id="@+id/lay_as_sub_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_marginRight="20sp"
                android:background="@drawable/et_bg"
                android:padding="8dp">


                <com.pos.salon.customview.CustomTextViewOpenSans
                    android:id="@+id/txt_as_subCateory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="8dp"
                    android:hint="Select Category"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:src="@mipmap/drop_down2" />


            </RelativeLayout>


            <RadioButton
                android:id="@+id/rd_as_sub_sub"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Add as sub-sub-category"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:checked="false"/>

            <RelativeLayout
                android:id="@+id/lay_as_sub_Sub_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_marginRight="20sp"
                android:background="@drawable/et_bg"
                android:padding="8dp">


                <com.pos.salon.customview.CustomTextViewOpenSans
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="8dp"
                    android:hint="Select Category"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:id="@+id/txt_as_sub_subCateory"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:src="@mipmap/drop_down2" />


            </RelativeLayout>

        </RadioGroup>

        <LinearLayout
            android:id="@+id/linear_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:background="@color/btnColor"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>

<ImageView
    android:id="@+id/img_cancel_dialog"
    android:layout_width="30dp"
    android:layout_alignParentRight="true"
    android:scaleType="centerCrop"
    android:src="@mipmap/popup_close"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:layout_height="30dp"/>

</RelativeLayout>