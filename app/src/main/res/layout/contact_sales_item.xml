<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:weightSum="50"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

                    <com.pos.salon.customview.CustomTextViewOpenSans
                        android:id="@+id/txt_contactSaleInvoice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:text="Sale Details(Invoice No.:)"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:fontFamily="@string/opensansregular" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="#D8D8D8"
                    android:layout_marginTop="5dp"
                    android:layout_height="0.5dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <com.pos.salon.customview.CustomTextViewOpenSans
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:text="Customer Name:"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:fontFamily="@string/opensansregular" />

                    <com.pos.salon.customview.CustomTextViewOpenSans
                        android:id="@+id/txt_contactSaleName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:gravity="left"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        app:fontFamily="@string/opensansregular" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

                    <com.pos.salon.customview.CustomTextViewOpenSans
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="Date:"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:fontFamily="@string/opensansregular" />

                    <com.pos.salon.customview.CustomTextViewOpenSans
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:id="@+id/contactSaleDate"
                        app:fontFamily="@string/opensansregular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

                    <com.pos.salon.customview.CustomTextViewOpenSans
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="Total Amount:"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:fontFamily="@string/opensansregular" />

                    <com.pos.salon.customview.CustomTextViewOpenSans
                        android:id="@+id/txt_contactSaleTotalAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        app:fontFamily="@string/opensansregular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

                    <com.pos.salon.customview.CustomTextViewOpenSans
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="Total Paid:"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:fontFamily="@string/opensansregular" />

                    <com.pos.salon.customview.CustomTextViewOpenSans
                        android:id="@+id/txt_contactSaleTotalPaid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        app:fontFamily="@string/opensansregular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

                    <com.pos.salon.customview.CustomTextViewOpenSans
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="Total Remaining:"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:fontFamily="@string/opensansregular" />

                    <com.pos.salon.customview.CustomTextViewOpenSans
                        android:id="@+id/txt_contactSaleTotalRemain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        app:fontFamily="@string/opensansregular" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

                    <com.pos.salon.customview.CustomTextViewOpenSans
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="Payment Status:"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:fontFamily="@string/opensansregular" />

                    <com.pos.salon.customview.CustomTextViewOpenSans
                        android:id="@+id/txt_totalSalePaymentStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorBlue"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="paid"
                        android:textColor="@color/white"
                        android:textSize="11dp"
                        app:fontFamily="@string/opensansregular" />
                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>