<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:id="@+id/linear_layout_id"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:weightSum="80"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="left"
                                android:text="Contact ID:"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                app:fontFamily="@string/opensansregular" />

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txt_contact_id"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:gravity="left"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                app:fontFamily="@string/opensansregular" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_gravity="right"
                                android:layout_marginRight="10dp"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:id="@+id/lay_pay"
                                    android:layout_width="match_parent"
                                    android:gravity="right"
                                    android:layout_height="wrap_content">

                                    <com.pos.salon.customview.CustomTextViewOpenSans
                                        android:id="@+id/txt_in_active"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@color/btnColor"
                                        android:paddingLeft="10dp"
                                        android:paddingTop="5dp"
                                        android:paddingRight="10dp"
                                        android:paddingBottom="5dp"
                                        android:text="In Active"
                                        android:textColor="@color/white"
                                        android:textSize="10dp"
                                        android:visibility="gone"
                                        app:fontFamily="@string/opensansregular" />

                                    <com.pos.salon.customview.CustomTextViewOpenSans
                                        android:layout_width="wrap_content"
                                        android:id="@+id/txt_active"
                                        android:layout_height="wrap_content"
                                        android:text="Active"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:paddingTop="5dp"
                                        android:visibility="gone"
                                        android:paddingBottom="5dp"
                                        android:background="@color/payBtn"
                                        android:textSize="10dp"
                                        android:textColor="@color/white"
                                        app:fontFamily="@string/opensansregular" />


                                </RelativeLayout>


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">

                        <com.pos.salon.customview.CustomTextViewOpenSans
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="left"
                            android:text="Customer Name:"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            app:fontFamily="@string/opensansregular" />


                        <com.pos.salon.customview.CustomTextViewOpenSans
                            android:id="@+id/txt_customer_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            app:fontFamily="@string/opensansregular" />

                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="left"
                                android:text="Mobile:"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                app:fontFamily="@string/opensansregular" />


                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txt_mobile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                app:fontFamily="@string/opensansregular" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Registration Date :"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                app:fontFamily="@string/opensansregular" />

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txt_registration_Date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                app:fontFamily="@string/opensansregular" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Total Sale Due:"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                app:fontFamily="@string/opensansregular" />

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txt_total_sale_due"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                app:fontFamily="@string/opensansregular" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Total Sale Return Due:"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                app:fontFamily="@string/opensansregular" />

                            <com.pos.salon.customview.CustomTextViewOpenSans
                                android:id="@+id/txt_total_return_due"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                app:fontFamily="@string/opensansregular" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_gravity="right"
                                android:layout_marginRight="10dp"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:gravity="right"
                                    android:layout_height="wrap_content">

                                    <com.pos.salon.customview.CustomTextViewOpenSans
                                        android:id="@+id/txt_resend_otp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Resend OTP"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:paddingTop="5dp"
                                        android:visibility="gone"
                                        android:paddingBottom="5dp"
                                        android:background="@color/btnColor"
                                        android:textSize="10dp"
                                        android:textColor="@color/white"
                                        app:fontFamily="@string/opensansregular" />

                                </RelativeLayout>


                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>





                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout

            android:id="@+id/lay_forward"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_forward"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:src="@drawable/rightarrow" />

        </LinearLayout>


    </FrameLayout>


</LinearLayout>
