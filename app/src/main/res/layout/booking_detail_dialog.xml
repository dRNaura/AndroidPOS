<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_editext"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Booking Summary"
              android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <View
                android:id="@+id/lay_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/dialog_title"
                android:layout_marginTop="10dp"
                android:background="@color/barColor"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_below="@+id/lay_view"
    android:orientation="vertical"
    android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"

                android:weightSum="2"
                android:layout_height="wrap_content">

                <com.pos.salon.customview.CustomTextViewOpenSans
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20sp"
                    android:text="Booking Date :"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                 <com.pos.salon.customview.CustomTextViewOpenSans
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20sp"
                    android:text="21/10/21"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/dialog_title"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <com.pos.salon.customview.CustomTextViewOpenSans
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20sp"
                android:text="Booking Time :"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <com.pos.salon.customview.CustomTextViewOpenSans
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20sp"
                android:text="09:30 AM"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/dialog_title"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <com.pos.salon.customview.CustomTextViewOpenSans
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20sp"
                android:text="Ammount To Pay :"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <com.pos.salon.customview.CustomTextViewOpenSans
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20sp"
                android:text="$20.00"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear_apply_changes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/barColor"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Proceed To Pay"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </LinearLayout>

</LinearLayout>


</RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_cancel_dialog"
        android:layout_width="30dp"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/popup_close"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_height="30dp"/>

</RelativeLayout>