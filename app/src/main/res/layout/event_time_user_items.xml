<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:id="@+id/lay_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/imgClock"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                      android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"
                        android:src="@mipmap/clock_img" />

                    <TextView
                        android:id="@+id/txt_time_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="19:20 AM"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imgClock"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />



                    <ImageView
                        android:id="@+id/imgOpenCLose"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/txt_time_event"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/user_img" />

                    <TextView
                        android:id="@+id/txtUser_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="Sandipan Biswas"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imgOpenCLose"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                <com.pos.salon.customview.CustomTextViewOpenSans
                    android:layout_width="wrap_content"
                    android:text="Detail"
                    android:textColor="@color/white"
                    android:id="@+id/txt_view"
                    android:textSize="16sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:visibility="gone"
                    android:paddingBottom="5dp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/blue_background_radius"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>