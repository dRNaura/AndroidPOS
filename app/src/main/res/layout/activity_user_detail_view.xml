            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="50"
                        android:padding="5dp"
                        android:layout_height="wrap_content">



                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="40"
                            android:orientation="vertical"
                            android:gravity="center"

                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp"
                                android:visibility="gone"
                                android:layout_height="wrap_content">

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="left"
                                    android:text="Sale Note:"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    app:fontFamily="@string/opensansregular" />

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:id="@+id/txt_sale_note"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:layout_gravity="center"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    app:fontFamily="@string/opensansregular" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp"
                                android:visibility="gone"
                                android:layout_height="wrap_content">

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="left"
                                    android:text="Staff Note:"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    app:fontFamily="@string/opensansregular" />

                                <com.pos.salon.customview.CustomTextViewOpenSans
                                    android:id="@+id/txt_staff_note"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    app:fontFamily="@string/opensansregular" />
                            </LinearLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"

                            android:layout_weight="10"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/open_action"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:src="@drawable/menu256" />

                        </RelativeLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
