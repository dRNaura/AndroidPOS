<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

    <com.pos.salon.customview.CustomTextViewOpenSans
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Amount:*"
        android:textColor="@color/black"
        android:textSize="@dimen/layout_text_size"
        android:textStyle="bold"
        app:fontFamily="@string/opensansregular" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/square_layout_stroke_bg"
        android:padding="5dp">

        <EditText
            android:id="@+id/et_Reference_No"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Amount"
            android:inputType="textCapSentences"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="15sp" />



    </RelativeLayout>

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Payment Method:*"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_text_size"
            android:textStyle="bold"
            app:fontFamily="@string/opensansregular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/et_bg">

            <Spinner
                android:id="@+id/dropdownlocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dropDownVerticalOffset="40dp"
                android:spinnerMode="dropdown">

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <com.pos.salon.customview.CustomTextViewOpenSans
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:text="Payment due():"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_text_size"
                app:fontFamily="@string/opensansregular" />

            <com.pos.salon.customview.CustomTextViewOpenSans
                android:id="@+id/order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="left"
                android:text="$111.00"
                android:textSize="15dp"
                android:textColor="@color/black"
                app:fontFamily="@string/opensansregular"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>