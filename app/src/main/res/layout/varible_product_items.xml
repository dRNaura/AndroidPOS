<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/square_layout_stroke_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_margin="15dp"
            android:orientation="vertical">

            <com.pos.salon.customview.CustomTextViewOpenSans
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Variable:"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_text_size"
                android:textStyle="bold"
                app:fontFamily="@string/opensansregular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/et_bg">

                <Spinner
                    android:id="@+id/spinner_template"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dropDownVerticalOffset="40dp"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <com.pos.salon.customview.CustomTextViewOpenSans
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color:"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_text_size"
                android:textStyle="bold"
                app:fontFamily="@string/opensansregular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg"
                android:layout_marginTop="5dp">

                <Spinner
                    android:id="@+id/spinner_Color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dropDownVerticalOffset="40dp"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <com.pos.salon.customview.CustomTextViewOpenSans
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Image:"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_text_size"
                android:textStyle="bold"
                app:fontFamily="@string/opensansregular" />

            <TextView
                android:id="@+id/txt_variant_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg"
                android:hint="Image"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Select Image"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/searchTextSize" />


            <LinearLayout
                android:id="@+id/lay_variation_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/colorBlue"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Variation Values"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>