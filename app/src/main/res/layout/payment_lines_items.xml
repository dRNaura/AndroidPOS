<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/lispos_stroke"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="left"
            android:text="Date:"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            app:fontFamily="@string/opensansregular" />

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:id="@+id/txt_paymentLineDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:gravity="left"
            android:text=""
            android:textColor="@color/black"
            android:textSize="12dp"
            app:fontFamily="@string/opensansregular" />

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:text="|"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:fontFamily="@string/opensansregular" />

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="left"
            android:text="Reference No: "
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            app:fontFamily="@string/opensansregular" />

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:id="@+id/txt_PaymentLineReferenceNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="12dp"
            app:fontFamily="@string/opensansregular" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="left"
            android:text="Amount:"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold"
            app:fontFamily="@string/opensansregular" />

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:id="@+id/txt_paymentLineAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:background="@color/payBtn"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12dp"
            app:fontFamily="@string/opensansregular" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content">

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="left"
            android:text="Payment mode:"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            app:fontFamily="@string/opensansregular" />

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:id="@+id/txt_payment_mode"
            android:text=""
            android:textColor="@color/black"
            android:textSize="12dp"
            app:fontFamily="@string/opensansregular" />

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="|"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:fontFamily="@string/opensansregular" />

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="left"
            android:text="Payment Note:"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            app:fontFamily="@string/opensansregular" />

        <com.pos.salon.customview.CustomTextViewOpenSans
            android:id="@+id/txt_payment_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:text=""
            android:textColor="@color/black"
            android:textSize="12dp"
            app:fontFamily="@string/opensansregular"/>

    </LinearLayout>

<!--    <View-->
<!--        android:id="@+id/view_line"-->
<!--        android:layout_width="match_parent"-->
<!--        android:background="#D8D8D8"-->
<!--        android:layout_gravity="bottom"-->
<!--        android:layout_height="0.2dp" />-->

</LinearLayout>
</LinearLayout>